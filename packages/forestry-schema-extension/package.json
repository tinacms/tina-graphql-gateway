{
  "name": "forestry-schema",
  "displayName": "forestry-schema",
  "publisher": "jeffsee55",
  "description": "Validate .forestry configurations",
  "version": "0.6.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": ".tina/front_matter/templates/*.yml",
        "url": "./forestrySchema/fmt_schema.json"
      },
      {
        "fileMatch": ".tina/settings.yml",
        "url": "./forestrySchema/settings_schema.json"
      },
      {
        "fileMatch": ".forestry/front_matter/templates/*.yml",
        "url": "./forestrySchema/fmt_schema.json"
      },
      {
        "fileMatch": ".forestry/settings.yml",
        "url": "./forestrySchema/settings_schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "dump:schema": "yarn forestry schema:audit --dump forestrySchema"
  },
  "devDependencies": {
    "@forestryio/cli": "workspace:packages/cli",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "minimist": "^1.2.5",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vsce": "^1.77.0",
    "vscode-test": "^1.3.0"
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ]
}
