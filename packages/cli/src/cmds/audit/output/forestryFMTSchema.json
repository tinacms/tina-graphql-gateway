                      "type": {
                        "const": "pages"
                      },
                      "section": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "type",
                      "section"
                    ],
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            },
            {
              "if": {
                "properties": {
                  "source": {
                    "properties": {
                      "type": {
                        "const": "documents"
                      }
                    }
                  }
                }
              },
              "then": {
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "source": {
