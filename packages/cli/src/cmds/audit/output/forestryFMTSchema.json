                "properties": {
                  "source": {
                    "properties": {
                      "type": {
                        "const": "simple"
                      }
                    }
                  }
                }
              },
              "then": {
                "additionalProperties": false,
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "source": {
                    "properties": {
                      "type": {
                        "const": "simple"
