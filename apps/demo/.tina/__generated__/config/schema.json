{
  "settings": {
    "sections": [
      {
        "label": "Authors",
        "name": "authors",
        "path": "content/authors",
        "templates": [
          "author"
        ],
        "type": "directory",
        "create": "documents",
        "match": "**/*.md",
        "new_doc_ext": "md"
      },
      {
        "label": "Posts",
        "name": "posts",
        "path": "content/posts",
        "templates": [
          "post"
        ],
        "type": "directory",
        "create": "documents",
        "match": "**/*.md",
        "new_doc_ext": "md"
      }
    ]
  },
  "templates": [
    {
      "label": "Post",
      "name": "post",
      "fields": [
        {
          "name": "title",
          "label": "Title",
          "type": "text"
        },
        {
          "name": "myHero",
          "type": "file",
          "label": "Hero"
        },
        {
          "name": "image",
          "label": "Image",
          "type": "text"
        },
        {
          "name": "author",
          "label": "Author",
          "type": "select",
          "config": {
            "source": {
              "type": "pages",
              "section": "authors"
            }
          }
        }
      ]
    },
    {
      "label": "Author",
      "name": "author",
      "fields": [
        {
          "name": "name",
          "type": "text",
          "label": "Name"
        },
        {
          "name": "isAuthor",
          "type": "boolean",
          "label": "is Author"
        },
        {
          "name": "description",
          "type": "textarea",
          "label": "Description"
        },
        {
          "name": "image",
          "type": "text",
          "label": "Image"
        },
        {
          "name": "accolades",
          "type": "field_group_list",
          "label": "Accolades",
          "fields": [
            {
              "type": "text",
              "label": "Figure",
              "name": "figure"
            },
            {
              "type": "text",
              "label": "Description",
              "name": "description"
            }
          ]
        }
      ]
    }
  ]
}