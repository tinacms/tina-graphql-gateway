{
  "name": "sc",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt --exclude demo run build",
    "watch": "yarn workspaces foreach run watch",
    "test": "yarn workspaces foreach run test",
    "apply": "yarn version apply --all --json",
    "apply:workspaces": "yarn version apply --all",
    "ci:build": "yarn workspaces foreach -pt --exclude demo run build",
    "ci:check:auth": "yarn npm whoami --scope forestryio",
    "ci:workspaces": "yarn workspaces foreach --exclude=demo --verbose npm publish --tolerate-republish"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:forestryio/graphql-demo.git"
  },
  "dependencies": {
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "eslint": "^6.8.0",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3",
    "workspace": "^0.0.1-preview.1"
  }
}
