{
  "name": "sc",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt --exclude demo --exclude @forestryio/graphiql run build",
    "watch": "yarn workspaces foreach --exclude forestry-schema -p -i --verbose run watch",
    "test": "yarn workspaces foreach run test",
    "apply": "yarn version apply --all --json",
    "apply:workspaces": "yarn version apply --all",
    "ci:build": "yarn workspaces foreach -pt --exclude demo --exclude @forestryio/graphiql run build",
    "ci:version-check": "yarn version check",
    "ci:publish": "yarn workspaces foreach --exclude=sc --exclude=demo --exclude=@forestryio/graphiql --exclude=forestry-schema --verbose npm publish --tolerate-republish",
    "ci:test": "yarn workspaces foreach --exclude=sc --exclude=demo --verbose run test"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:forestryio/graphql-demo.git"
  },
  "dependencies": {
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "eslint": "^6.8.0",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3",
    "workspace": "^0.0.1-preview.1"
  },
  "dependenciesMeta": {
    "remark-mdx": {
      "unplugged": true
    },
    "rmark-mdx": {
      "unplugged": true
    }
  }
}
