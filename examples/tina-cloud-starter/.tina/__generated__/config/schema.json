{
  "settings": {
    "sections": [
      {
        "label": "Blog Posts",
        "name": "posts",
        "path": "content/posts",
        "templates": [
          "article"
        ],
        "type": "directory",
        "create": "documents",
        "match": "**/*.md",
        "new_doc_ext": "md"
      },
      {
        "label": "Authors",
        "name": "authors",
        "path": "content/authors",
        "templates": [
          "author"
        ],
        "type": "directory",
        "create": "documents",
        "match": "**/*.md",
        "new_doc_ext": "md"
      },
      {
        "label": "Marketing Pages",
        "name": "marketingPages",
        "path": "content/marketing-pages",
        "templates": [
          "landingPage"
        ],
        "type": "directory",
        "create": "documents",
        "match": "**/*.md",
        "new_doc_ext": "md"
      }
    ]
  },
  "templates": [
    {
      "label": "Article",
      "name": "article",
      "fields": [
        {
          "type": "text",
          "label": "Title",
          "name": "title"
        },
        {
          "name": "author",
          "label": "Author",
          "type": "select",
          "config": {
            "source": {
              "type": "pages",
              "section": "authors"
            }
          }
        }
      ]
    },
    {
      "label": "Author",
      "name": "author",
      "fields": [
        {
          "type": "text",
          "label": "Name",
          "name": "name"
        },
        {
          "type": "text",
          "label": "Avatar",
          "name": "avatar"
        }
      ]
    },
    {
      "name": "message",
      "label": "Message",
      "fields": [
        {
          "type": "text",
          "label": "Message Header",
          "name": "messageHeader"
        },
        {
          "type": "textarea",
          "label": "Message Body",
          "name": "messageBody"
        }
      ]
    },
    {
      "name": "image",
      "label": "Image",
      "fields": [
        {
          "type": "text",
          "label": "Heading",
          "name": "heading"
        },
        {
          "type": "textarea",
          "label": "Image Description",
          "name": "imgDescription"
        },
        {
          "type": "text",
          "label": "Image src",
          "name": "src"
        }
      ]
    },
    {
      "label": "Landing Page",
      "name": "landingPage",
      "fields": [
        {
          "name": "blocks",
          "label": "Blocks",
          "type": "blocks",
          "template_types": [
            "message",
            "image"
          ]
        }
      ]
    }
  ]
}